<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/howToPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ubuntu_bold"
        android:text="How do I play?"
        android:textColor="@color/black"
        android:textSize="48dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ubuntu"
        android:paddingHorizontal="50dp"
        android:text="Youâ€™ll be chatting with an AI impersonating either a scammer or a genuine individual persona."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/beginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ubuntu_light"
        android:paddingHorizontal="50dp"
        android:text="Once the timer ends, you will have to guess which role was undertaken."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="visible" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/button_Animation"
        app:lottie_rawRes="@raw/animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/beginButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_Animation"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/blue"
        android:background="@drawable/button_background">

        <TextView
            android:id="@+id/buttonText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BEGIN"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>
