<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/wrongAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="156dp"
        app:lottie_rawRes="@raw/wrong"></com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrongAnimation"
        android:layout_marginStart="86dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:layout_marginBottom="321dp"
        android:text="You did not get it right. Please try again" />

    <RelativeLayout
        android:id="@+id/againButton"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_below="@id/wrongAnimation"
        android:layout_marginTop="100dp"
        android:layout_marginStart="58dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/button_background">

        <TextView
            android:id="@+id/anotherOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="One More Time!"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>