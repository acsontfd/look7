<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/guessbackground"
    android:gravity="center_horizontal">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/wrongAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="215dp"
        app:lottie_rawRes="@raw/wrong"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="You did not get it right. Please try again" />

    <RelativeLayout
        android:id="@+id/againButtons"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/button_background">

        <TextView
            android:id="@+id/anotherOnes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="One More Time!"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
